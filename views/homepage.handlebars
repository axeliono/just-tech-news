<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="{{post_url}}" target="_blank">{{title}}</a>
                <span>({{post-url}})</span>
            </div>
            <div class="meta">
                {{vote_count}} points(s) by {{user.username}} on
                {{created_at}}
                |
                <a href="/post/{{id}}">{{comments.length}} comments(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>